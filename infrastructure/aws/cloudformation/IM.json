{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Parameters":{
    "username" : {
      "Type": "String",
      "Default": "CircleCI"
    },
    "S3Bucket" : {
      "Type": "String",
      "Default": "csye6225-su19-honraoa.me.csye6225.com"
    }
  },
  "Resources": {
    "CodeDeployEC2S3":{
      "Type" : "AWS::IAM::ManagedPolicy",
      "Properties" : {
        "PolicyDocument" : {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": [
                "s3:Get*",
                "s3:List*"
              ],
              "Effect": "Allow",
              "Resource": ["arn:aws:s3:::code-deploy.csye6225-su19-honraoa.me",
                "arn:aws:s3:::code-deploy.csye6225-su19-honraoa.me/*"]
              }
            ]
          },
          "ManagedPolicyName" : "CodeDeploy-EC2-S3"
        }
      },
      "CircleCIUploadToS3":{
        "Type" : "AWS::IAM::ManagedPolicy",
        "Properties" : {
          "Users":[{"Ref":"username"}],
          "PolicyDocument" : {
            "Version": "2012-10-17",
            "Statement": [
              {
                "Action": [
                  "s3:PutObject"
                ],
                "Effect": "Allow",
                "Resource": ["arn:aws:s3:::code-deploy.csye6225-su19-honraoa.me",
                  "arn:aws:s3:::code-deploy.csye6225-su19-honraoa.me/*"]
                }
              ]
            },
            "ManagedPolicyName" : "CircleCI-Upload-To-S3"
          }
        },
        "circleciec2ami":{
          "Type" : "AWS::IAM::ManagedPolicy",
          "Properties" : {
            "Users":[{"Ref":"username"}],
            "PolicyDocument" : {
              "Version": "2012-10-17",
              "Statement": [{
                "Effect": "Allow",
                "Action" : [
                  "ec2:AttachVolume",
                  "ec2:AuthorizeSecurityGroupIngress",
                  "ec2:CopyImage",
                  "ec2:CreateImage",
                  "ec2:CreateKeypair",
                  "ec2:CreateSecurityGroup",
                  "ec2:CreateSnapshot",
                  "ec2:CreateTags",
                  "ec2:CreateVolume",
                  "ec2:DeleteKeyPair",
                  "ec2:DeleteSecurityGroup",
                  "ec2:DeleteSnapshot",
                  "ec2:DeleteVolume",
                  "ec2:DeregisterImage",
                  "ec2:DescribeImageAttribute",
                  "ec2:DescribeImages",
                  "ec2:DescribeInstances",
                  "ec2:DescribeInstanceStatus",
                  "ec2:DescribeRegions",
                  "ec2:DescribeSecurityGroups",
                  "ec2:DescribeSnapshots",
                  "ec2:DescribeSubnets",
                  "ec2:DescribeTags",
                  "ec2:DescribeVolumes",
                  "ec2:DetachVolume",
                  "ec2:GetPasswordData",
                  "ec2:ModifyImageAttribute",
                  "ec2:ModifyInstanceAttribute",
                  "ec2:ModifySnapshotAttribute",
                  "ec2:RegisterImage",
                  "ec2:RunInstances",
                  "ec2:StopInstances",
                  "ec2:TerminateInstances"
                ],
                "Resource" : "*"
                }]
              },
              "ManagedPolicyName" : "circleci-ec2-ami"
            }
          },
          "CirlceCICodeDeploy":{
            "Type" : "AWS::IAM::ManagedPolicy",
            "Properties" : {
              "Users":[{"Ref":"username"}],
              "PolicyDocument" : {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Effect": "Allow",
                    "Action": [
                      "codedeploy:RegisterApplicationRevision",
                      "codedeploy:GetApplicationRevision"
                    ],
                    "Resource": [
                      "arn:aws:codedeploy:us-east-1:929363290540:application:csye6225-webapp"
                    ]
                  },
                  {
                    "Effect": "Allow",
                    "Action": [
                      "codedeploy:CreateDeployment",
                      "codedeploy:GetDeployment"
                    ],
                    "Resource": [
                      "*"
                    ]
                  },
                  {
                    "Effect": "Allow",
                    "Action": [
                      "codedeploy:GetDeploymentConfig"
                    ],
                    "Resource": [
                      "arn:aws:codedeploy:us-east-1:929363290540:deploymentconfig:CodeDeployDefault.OneAtATime",
                      "arn:aws:codedeploy:us-east-1:929363290540:deploymentconfig:CodeDeployDefault.HalfAtATime",
                      "arn:aws:codedeploy:us-east-1:929363290540:deploymentconfig:CodeDeployDefault.AllAtOnce"
                    ]
                  }
                ]
              }
            }
          },
          "ImageEC2S3":{
            "Type" : "AWS::IAM::ManagedPolicy",
            "Properties" : {
              "PolicyDocument" : {
                "Version": "2012-10-17",
                "Statement": [
                  {
                    "Action": [
                      "s3:Get*",
                      "s3:List*",
                      "s3:PutObject"
                    ],
                    "Effect": "Allow",
                    "Resource": ["arn:aws:s3:::csye6225-su19-honraoa.me.csye6225.com",
                      "arn:aws:s3:::csye6225-su19-honraoa.me.csye6225.com/*"]
                    }
                  ]
                },
                "ManagedPolicyName" : "ImageEC2S3"
              }
            },
            "CodeDeployEC2ServiceRole" : {
              "Type" : "AWS::IAM::Role",
              "Properties" : {
                "AssumeRolePolicyDocument": {
                  "Version" : "2012-10-17",
                  "Statement": [ {
                    "Effect": "Allow",
                    "Principal": {
                      "Service": [ "ec2.amazonaws.com" ]
                    },
                    "Action": [ "sts:AssumeRole" ]
                    } ]
                  },
                  "ManagedPolicyArns" : [
                  {
                    "Ref" : "CodeDeployEC2S3"
                  },
                  {
                  "Ref" : "ImageEC2S3"
                  }
                ],
                "RoleName" : "CodeDeployEC2ServiceRole"
              }
            }
        }
      }
